<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <form class="form-inline ml-auto mt-2" action="<%= username ? '/logout' : '/login' %>" method="POST">
        <div class="form-group mb-2">
          <% if (username) { %>
            <span class="mr-2">Logged in as <%= username %></span>
            <button type="submit" class="btn btn-primary">Logout</button>
          <% } else { %>
            <button type="button" class="btn btn-primary mx-2">
              <a href="/login" style="color: white;">Login</a>
            </button>
            <button type="button" class="btn btn-primary mx-2">
              <a href="/register" style="color: white;">Register</a>
            </button>
          <% } %>
        </div>
      </form>
    </div>
  </nav>
</header>
